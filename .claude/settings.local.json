      "Bash(do if ! grep -q \"Instrument\" \"$f\")",
      "Bash(then echo \"Missing Instrument Serif: $f\" fi done)",
      "Bash(xargs -I{} sh -c 'grep -q \"\"\"\"Instrument\"\"\"\" {} || echo \"\"\"\"Missing: {}\"\"\"\"')",
      "Bash(git add:*)"
    ],
    "deny": [],
    "ask": []
  }
}
