<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Network Intelligence & Strategic Outreach - HenryAI</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: linear-gradient(135deg, #0a0a0a 0%, #1a1a1a 100%);
            color: #e0e0e0;
            padding: 20px;
            min-height: 100vh;
            line-height: 1.6;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .back-link {
            display: inline-flex;
            align-items: center;
            color: #60a5fa;
            text-decoration: none;
            margin-bottom: 30px;
            font-size: 14px;
            transition: color 0.2s;
        }

        .back-link:hover {
            color: #93c5fd;
        }

        h1 {
            font-size: 2.5rem;
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 15px;
        }

        .subtitle {
            color: #9ca3af;
            margin-bottom: 40px;
            font-size: 1.1rem;
            max-width: 800px;
        }

        .two-column-grid {
            display: grid;
            grid-template-columns: 1fr 1px 1fr;
            gap: 40px;
            margin-bottom: 40px;
        }

        .divider {
            background: linear-gradient(to bottom, transparent, #374151 20%, #374151 80%, transparent);
        }

        .contact-section {
            background: #1f2937;
            border-radius: 12px;
            padding: 30px;
            border: 1px solid #374151;
        }

        .section-icon {
            font-size: 2rem;
            margin-bottom: 15px;
        }

        .section-title {
            font-size: 1.8rem;
            margin-bottom: 15px;
            color: #60a5fa;
        }

        .section-intro {
            color: #9ca3af;
            margin-bottom: 25px;
            line-height: 1.7;
        }

        .info-block {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
        }

        .info-label {
            font-size: 0.85rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #9ca3af;
            margin-bottom: 8px;
            font-weight: 600;
        }

        .info-value {
            font-size: 1.1rem;
            color: #e0e0e0;
            line-height: 1.6;
        }

        .why-matters-box {
            background: rgba(96, 165, 250, 0.1);
            border: 1px solid #60a5fa;
            border-radius: 8px;
            padding: 18px;
            margin-bottom: 20px;
        }

        .why-matters-label {
            font-size: 0.9rem;
            font-weight: 600;
            color: #60a5fa;
            margin-bottom: 8px;
        }

        .why-matters-text {
            color: #e0e0e0;
            line-height: 1.7;
            font-size: 0.95rem;
        }

        .search-query-box {
            background: #0a0a0a;
            border: 1px solid #374151;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            position: relative;
        }

        .search-query-text {
            font-family: 'Courier New', monospace;
            color: #60a5fa;
            font-size: 0.95rem;
            word-break: break-word;
        }

        .copy-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 6px 12px;
            background: #374151;
            color: #e0e0e0;
            border: none;
            border-radius: 6px;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .copy-btn:hover {
            background: #4b5563;
        }

        .copy-btn.copied {
            background: #10b981;
            color: white;
        }

        .template-box {
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid #374151;
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 20px;
            position: relative;
        }

        .template-label {
            font-size: 0.9rem;
            font-weight: 600;
            color: #9ca3af;
            margin-bottom: 12px;
        }

        .template-text {
            color: #e0e0e0;
            line-height: 1.8;
            font-size: 0.95rem;
        }

        .tips-section {
            background: #1f2937;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
            border: 1px solid #374151;
        }

        .tips-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 20px;
            margin-top: 20px;
        }

        .tip-card {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            padding: 20px;
            border-left: 3px solid #60a5fa;
        }

        .tip-title {
            font-size: 1rem;
            font-weight: 600;
            color: #60a5fa;
            margin-bottom: 10px;
        }

        .tip-content {
            color: #d1d5db;
            font-size: 0.9rem;
            line-height: 1.6;
        }

        .red-flags-section {
            background: rgba(239, 68, 68, 0.1);
            border: 2px solid #ef4444;
            border-radius: 12px;
            padding: 30px;
            margin-bottom: 30px;
        }

        .red-flags-header {
            font-size: 1.5rem;
            color: #ef4444;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .red-flag-item {
            background: rgba(0, 0, 0, 0.3);
            padding: 15px;
            border-radius: 6px;
            margin-bottom: 12px;
            border-left: 3px solid #ef4444;
        }

        .red-flag-item strong {
            color: #fca5a5;
        }

        .action-buttons {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 15px;
            margin: 40px 0;
        }

        .action-btn {
            padding: 16px 24px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: all 0.2s;
            text-decoration: none;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        .action-btn-primary {
            background: #60a5fa;
            color: white;
        }

        .action-btn-primary:hover {
            background: #3b82f6;
            transform: translateY(-2px);
        }

        .action-btn-secondary {
            background: transparent;
            color: #9ca3af;
            border: 1px solid #4b5563;
        }

        .action-btn-secondary:hover {
            background: rgba(255, 255, 255, 0.05);
            color: #e0e0e0;
        }

        .navigation {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 30px;
            border-top: 1px solid #374151;
        }

        .btn {
            padding: 14px 28px;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: all 0.2s;
            text-decoration: none;
            display: inline-block;
        }

        .btn-secondary {
            background: transparent;
            color: #9ca3af;
            border: 1px solid #4b5563;
        }

        .btn-secondary:hover {
            background: rgba(255, 255, 255, 0.05);
            color: #e0e0e0;
        }

        @media (max-width: 1024px) {
            .two-column-grid {
                grid-template-columns: 1fr;
                gap: 30px;
            }

            .divider {
                display: none;
            }

            .tips-grid {
                grid-template-columns: 1fr;
            }

            .action-buttons {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 768px) {
            h1 {
                font-size: 2rem;
            }

            .navigation {
                flex-direction: column-reverse;
                gap: 15px;
            }

            .btn {
                width: 100%;
                text-align: center;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="overview.html" class="back-link">‚Üê Back to Strategic Overview</a>

        <h1>
            <span>ü§ù</span> Network Intelligence & Strategic Outreach
        </h1>
        <p class="subtitle">
            Strategic guidance on identifying key decision-makers, timing your outreach, and positioning yourself effectively. 
            This is where relationships get built before you even interview.
        </p>

        <!-- Two-Column Layout: Hiring Manager | Recruiter -->
        <div class="two-column-grid">
            <!-- Hiring Manager Section -->
            <div class="contact-section">
                <div class="section-icon">üìã</div>
                <h2 class="section-title">Identifying the Hiring Manager</h2>
                <p class="section-intro">
                    The hiring manager is the person who will actually work with you. They care about culture fit, 
                    problem-solving approach, and whether you can immediately contribute.
                </p>

                <div class="info-block">
                    <div class="info-label">LIKELY TITLE</div>
                    <div class="info-value" id="hmLikelyTitle">VP of Talent Acquisition</div>
                </div>

                <div class="why-matters-box">
                    <div class="why-matters-label">Why This Matters</div>
                    <div class="why-matters-text" id="hmWhyMatters">
                        Getting in front of them early bypasses the resume screening lottery and lets you demonstrate value directly.
                    </div>
                </div>

                <div class="info-block">
                    <div class="info-label">LINKEDIN SEARCH QUERY</div>
                    <div class="search-query-box">
                        <div class="search-query-text" id="hmSearchQuery">
                            [Company Name] AND (talent acquisition OR recruiting) AND (VP OR director OR head)
                        </div>
                        <button class="copy-btn" onclick="copyToClipboard('hmSearchQuery', this)">Copy</button>
                    </div>
                </div>

                <div class="info-block">
                    <div class="info-label">HOW TO FILTER RESULTS</div>
                    <div class="info-value" id="hmFilters">
                        Filter by: Current employees only, Director level or above, recent activity (posts/comments in last 30 days).
                    </div>
                </div>

                <div class="template-box">
                    <div class="template-label">OUTREACH TEMPLATE</div>
                    <div class="template-text" id="hmTemplate">
                        Hi [Name], I'm excited about [Company]'s mission. Having recruited for similar roles, 
                        I understand the unique challenges. Would you be open to a brief conversation?
                    </div>
                    <button class="copy-btn" onclick="copyToClipboard('hmTemplate', this)">Copy</button>
                </div>
            </div>

            <!-- Divider -->
            <div class="divider"></div>

            <!-- Recruiter Section -->
            <div class="contact-section">
                <div class="section-icon">üéØ</div>
                <h2 class="section-title">Identifying the Recruiter</h2>
                <p class="section-intro">
                    Recruiters control the pipeline. They decide who gets through to the hiring manager. 
                    A good relationship means your resume gets flagged as priority.
                </p>

                <div class="info-block">
                    <div class="info-label">LIKELY TITLE</div>
                    <div class="info-value" id="recLikelyTitle">Technical Recruiter</div>
                </div>

                <div class="why-matters-box">
                    <div class="why-matters-label">Why This Matters</div>
                    <div class="why-matters-text" id="recWhyMatters">
                        A good relationship with the recruiter means your resume gets flagged as priority and you get inside intel.
                    </div>
                </div>

                <div class="info-block">
                    <div class="info-label">LINKEDIN SEARCH QUERY</div>
                    <div class="search-query-box">
                        <div class="search-query-text" id="recSearchQuery">
                            [Company Name] AND (recruiter OR talent acquisition OR people operations)
                        </div>
                        <button class="copy-btn" onclick="copyToClipboard('recSearchQuery', this)">Copy</button>
                    </div>
                </div>

                <div class="info-block">
                    <div class="info-label">HOW TO FILTER RESULTS</div>
                    <div class="info-value" id="recFilters">
                        Filter by: Current employees, recent activity (posted in last 60 days), profile mentions the specific role.
                    </div>
                </div>

                <div class="template-box">
                    <div class="template-label">OUTREACH TEMPLATE</div>
                    <div class="template-text" id="recTemplate">
                        Hello [Name], I'm reaching out about [Company]'s [Role Title] position. 
                        My background in [specific experience] aligns well with the role requirements. Would you be open to discussing my candidacy?
                    </div>
                    <button class="copy-btn" onclick="copyToClipboard('recTemplate', this)">Copy</button>
                </div>
            </div>
        </div>

        <!-- Strategic Tips -->
        <div class="tips-section">
            <h2 class="section-title">Strategic Outreach Tips</h2>
            <div class="tips-grid">
                <div class="tip-card">
                    <div class="tip-title">‚è∞ Timing Your Outreach</div>
                    <div class="tip-content">
                        Best times: Tuesday-Thursday, 10am-2pm in their timezone. 
                        Avoid Monday mornings and Friday afternoons. 
                        Wait 24 hours after applying before reaching out.
                    </div>
                </div>

                <div class="tip-card">
                    <div class="tip-title">üîó Check for Connections</div>
                    <div class="tip-content">
                        Look for mutual connections or shared alumni networks. 
                        Warm introductions get 3x higher response rates. 
                        If you find a mutual connection, ask for an intro instead of cold outreach.
                    </div>
                </div>

                <div class="tip-card">
                    <div class="tip-title">üìù What Recruiters Care About</div>
                    <div class="tip-content">
                        Can you do the job? Will you accept their offer? How quickly can you interview? 
                        Make these easy answers in your outreach. Be specific about availability and interest level.
                    </div>
                </div>

                <div class="tip-card">
                    <div class="tip-title">‚≠ê How to Stand Out</div>
                    <div class="tip-content">
                        Reference something specific from the company's recent news, blog post, or product launch. 
                        Shows genuine interest, not spray-and-pray applications. Do 5 minutes of research before sending.
                    </div>
                </div>
            </div>
        </div>

        <!-- Red Flags -->
        <div class="red-flags-section">
            <h2 class="red-flags-header">
                <span>‚ö†Ô∏è</span> Red Flags to Watch
            </h2>
            <div class="red-flag-item">
                <strong>No response after 2 weeks:</strong> Likely a ghost job or deprioritized role. Move on.
            </div>
            <div class="red-flag-item">
                <strong>Multiple repostings:</strong> High turnover or impossible requirements. Proceed with caution.
            </div>
            <div class="red-flag-item">
                <strong>Vague job description:</strong> Role is ill-defined or suffering from scope creep. Ask specific questions.
            </div>
            <div class="red-flag-item">
                <strong>Excessive interview rounds:</strong> More than 5 rounds suggests decision paralysis or poor process.
            </div>
            <div class="red-flag-item">
                <strong>"Competitive" or "negotiable" comp:</strong> Usually means they're lowballing. Get range upfront.
            </div>
        </div>

        <!-- Action Buttons -->
        <div class="action-buttons">
            <a href="overview.html" class="action-btn action-btn-secondary">
                <span>‚óÑ</span> Back to Overview
            </a>
            <a href="tracker.html" class="action-btn action-btn-primary">
                <span>üìä</span> View My Tracker
            </a>
            <a href="analyze.html" class="action-btn action-btn-primary">
                <span>üîç</span> Analyze Another Role
            </a>
        </div>

        <!-- Navigation -->
        <div class="navigation">
            <a href="documents.html" class="btn btn-secondary">‚Üê Back to Documents</a>
        </div>
    </div>

    <script>
        // Copy to clipboard function
        function copyToClipboard(elementId, button) {
            const element = document.getElementById(elementId);
            const text = element.textContent;
            
            navigator.clipboard.writeText(text).then(() => {
                button.textContent = 'Copied!';
                button.classList.add('copied');
                
                setTimeout(() => {
                    button.textContent = 'Copy';
                    button.classList.remove('copied');
                }, 2000);
            }).catch(err => {
                console.error('Copy failed:', err);
                alert('Failed to copy. Please select and copy manually.');
            });
        }

        // Load data from sessionStorage
        window.addEventListener('DOMContentLoaded', () => {
            const data = sessionStorage.getItem('analysisData');
            
            if (!data) {
                window.location.href = 'index.html';
                return;
            }

            const analysis = JSON.parse(data);
            const hiringIntel = analysis.hiring_intel || {};
            const hiringManager = hiringIntel.hiring_manager || {};
            const recruiter = hiringIntel.recruiter || {};
            const outreach = analysis.outreach || {};
            
            // Extract company name
            const companyName = analysis._company_name || analysis.company || '[Company Name]';

            // Populate Hiring Manager section
            document.getElementById('hmLikelyTitle').textContent = 
                hiringManager.likely_title || 'VP of Talent Acquisition';
            
            document.getElementById('hmWhyMatters').textContent = 
                hiringManager.why_matters || 'Getting in front of them early bypasses the resume screening lottery and lets you demonstrate value directly.';
            
            // Replace company name placeholder in search query
            let hmSearch = hiringManager.search_instructions || `${companyName} AND (talent acquisition OR recruiting) AND (VP OR director OR head)`;
            hmSearch = hmSearch.replace('[ACTUAL COMPANY NAME]', companyName).replace('[Company Name]', companyName);
            document.getElementById('hmSearchQuery').textContent = hmSearch;
            
            document.getElementById('hmFilters').textContent = 
                hiringManager.filters || 'Filter by: Current employees only, Director level or above, recent activity (posts/comments in last 30 days).';
            
            // Replace company name in outreach template
            let hmTemplate = outreach.hiring_manager || 'Hi [Name], I\'m excited about [Company]\'s mission. Having recruited for similar roles, I understand the unique challenges. Would you be open to a brief conversation?';
            hmTemplate = hmTemplate.replace(/\[ACTUAL COMPANY\]/g, companyName).replace(/\[Company Name\]/g, companyName);
            document.getElementById('hmTemplate').textContent = hmTemplate;

            // Populate Recruiter section
            document.getElementById('recLikelyTitle').textContent = 
                recruiter.likely_title || 'Technical Recruiter';
            
            document.getElementById('recWhyMatters').textContent = 
                recruiter.why_matters || 'A good relationship with the recruiter means your resume gets flagged as priority and you get inside intel.';
            
            // Replace company name placeholder in search query
            let recSearch = recruiter.search_instructions || `${companyName} AND (recruiter OR talent acquisition OR people operations)`;
            recSearch = recSearch.replace('[ACTUAL COMPANY NAME]', companyName).replace('[Company Name]', companyName);
            document.getElementById('recSearchQuery').textContent = recSearch;
            
            document.getElementById('recFilters').textContent = 
                recruiter.filters || 'Filter by: Current employees, recent activity (posted in last 60 days), profile mentions the specific role.';
            
            // Replace company name and role in outreach template
            let recTemplate = outreach.recruiter || 'Hello [Name], I\'m reaching out about [Company]\'s [Role Title] position. My background in [specific experience] aligns well with the role requirements. Would you be open to discussing my candidacy?';
            recTemplate = recTemplate.replace(/\[ACTUAL COMPANY\]/g, companyName)
                                     .replace(/\[Company Name\]/g, companyName)
                                     .replace('[ACTUAL ROLE TITLE]', analysis.role_title || '[Role Title]');
            document.getElementById('recTemplate').textContent = recTemplate;
        });
    </script>
</body>
</html>
