{
  "version": "1.0",
  "description": "Role-specific question bank with signal mappings for HenryAI Interview Intelligence",

  "question_categories": {
    "warm_start": {
      "description": "Opening questions to build rapport",
      "questions": [
        {
          "id": "ws_001",
          "text": "Hi {name}, thank you for making time for this conversation. Before we dive in, I'd love to hear a quick overview of your background. Can you walk me through your career journey in about 60-90 seconds?",
          "signals": ["communication_clarity", "functional_competency"],
          "follow_up_triggers": ["vague_answer", "missing_metrics"],
          "target_levels": ["mid", "senior", "director", "executive"]
        },
        {
          "id": "ws_002",
          "text": "What drew you to this role and this company specifically?",
          "signals": ["strategic_thinking", "user_centricity"],
          "follow_up_triggers": ["vague_answer"],
          "target_levels": ["mid", "senior", "director", "executive"]
        }
      ]
    },

    "recruiter_screen": {
      "description": "Basic qualification and motivation questions",
      "questions": [
        {
          "id": "rs_001",
          "text": "What are you looking for in your next role?",
          "signals": ["strategic_thinking", "ownership"],
          "follow_up_triggers": ["vague_answer"],
          "target_levels": ["mid", "senior", "director", "executive"]
        },
        {
          "id": "rs_002",
          "text": "Why are you considering leaving your current position?",
          "signals": ["communication_clarity", "ownership"],
          "follow_up_triggers": ["vague_answer"],
          "target_levels": ["mid", "senior", "director", "executive"]
        },
        {
          "id": "rs_003",
          "text": "What's your timeline for making a move?",
          "signals": ["communication_clarity"],
          "follow_up_triggers": [],
          "target_levels": ["mid", "senior", "director", "executive"]
        }
      ]
    },

    "behavioral": {
      "description": "Role-agnostic behavioral questions",
      "questions": [
        {
          "id": "bh_001",
          "text": "Tell me about a time you had to influence someone without direct authority.",
          "signals": ["leadership", "stakeholder_management", "communication_clarity"],
          "follow_up_triggers": ["no_conflict", "vague_answer", "missing_metrics"],
          "target_levels": ["senior", "director", "executive"]
        },
        {
          "id": "bh_002",
          "text": "Describe a situation where you had to make a difficult decision with incomplete information.",
          "signals": ["problem_solving", "ownership", "strategic_thinking"],
          "follow_up_triggers": ["vague_answer", "no_strategy"],
          "target_levels": ["senior", "director", "executive"]
        },
        {
          "id": "bh_003",
          "text": "Tell me about a time you failed or made a mistake. What happened and what did you learn?",
          "signals": ["ownership", "problem_solving", "communication_clarity"],
          "follow_up_triggers": ["vague_answer", "missing_metrics"],
          "target_levels": ["mid", "senior", "director", "executive"]
        },
        {
          "id": "bh_004",
          "text": "Describe a time you had to manage conflicting priorities from multiple stakeholders.",
          "signals": ["stakeholder_management", "strategic_thinking", "communication_clarity"],
          "follow_up_triggers": ["no_conflict", "vague_answer"],
          "target_levels": ["senior", "director", "executive"]
        },
        {
          "id": "bh_005",
          "text": "Tell me about a project you're most proud of. Walk me through it end-to-end.",
          "signals": ["functional_competency", "ownership", "metrics_orientation"],
          "follow_up_triggers": ["missing_metrics", "vague_answer"],
          "target_levels": ["mid", "senior", "director", "executive"]
        }
      ]
    }
  },

  "role_specific_questions": {
    "product_manager": {
      "hiring_manager_deep_dive": [
        {
          "id": "pm_hm_001",
          "text": "Walk me through a feature you shipped end-to-end. What was your role and what was the impact?",
          "signals": ["functional_competency", "ownership", "metrics_orientation"],
          "follow_up_triggers": ["missing_metrics", "vague_answer"],
          "target_levels": ["mid", "senior", "director"]
        },
        {
          "id": "pm_hm_002",
          "text": "How do you decide what to build when everything feels important?",
          "signals": ["strategic_thinking", "problem_solving", "stakeholder_management"],
          "follow_up_triggers": ["no_strategy", "vague_answer"],
          "target_levels": ["mid", "senior", "director"]
        },
        {
          "id": "pm_hm_003",
          "text": "Tell me about a time engineering disagreed with your requirements. How did you handle it?",
          "signals": ["collaboration", "stakeholder_management", "communication_clarity"],
          "follow_up_triggers": ["no_conflict", "vague_answer"],
          "target_levels": ["mid", "senior", "director"]
        },
        {
          "id": "pm_hm_004",
          "text": "How do you gather and incorporate user feedback into your product decisions?",
          "signals": ["user_centricity", "functional_competency", "problem_solving"],
          "follow_up_triggers": ["no_user_focus", "vague_answer"],
          "target_levels": ["mid", "senior", "director"]
        },
        {
          "id": "pm_hm_005",
          "text": "Describe how you work with design and engineering to ship a product.",
          "signals": ["collaboration", "stakeholder_management", "communication_clarity"],
          "follow_up_triggers": ["vague_answer"],
          "target_levels": ["mid", "senior"]
        }
      ],
      "strategy": [
        {
          "id": "pm_st_001",
          "text": "If leadership cut 30% of your roadmap tomorrow, what stays and what goes? Walk me through your thinking.",
          "signals": ["strategic_thinking", "problem_solving", "executive_presence"],
          "follow_up_triggers": ["no_strategy", "vague_answer"],
          "target_levels": ["senior", "director", "executive"]
        },
        {
          "id": "pm_st_002",
          "text": "What metrics matter most for evaluating your product? How did you arrive at those?",
          "signals": ["metrics_orientation", "strategic_thinking", "functional_competency"],
          "follow_up_triggers": ["missing_metrics", "vague_answer"],
          "target_levels": ["mid", "senior", "director"]
        },
        {
          "id": "pm_st_003",
          "text": "How do you balance short-term wins with long-term product vision?",
          "signals": ["strategic_thinking", "ownership", "executive_presence"],
          "follow_up_triggers": ["no_strategy", "vague_answer"],
          "target_levels": ["senior", "director", "executive"]
        }
      ],
      "behavioral": [
        {
          "id": "pm_bh_001",
          "text": "Tell me about a time engineering pushed back on your roadmap. How did you handle it?",
          "signals": ["stakeholder_management", "collaboration", "communication_clarity"],
          "follow_up_triggers": ["no_conflict", "vague_answer"],
          "target_levels": ["mid", "senior", "director"]
        },
        {
          "id": "pm_bh_002",
          "text": "Describe a time you had to kill a feature or project. What was your process?",
          "signals": ["ownership", "strategic_thinking", "communication_clarity"],
          "follow_up_triggers": ["vague_answer", "missing_metrics"],
          "target_levels": ["senior", "director"]
        }
      ],
      "follow_ups": {
        "missing_metrics": "What were the specific numbers or outcomes?",
        "vague_answer": "Can you be more specific about your role and contribution?",
        "no_conflict": "What tradeoffs were you balancing?",
        "no_strategy": "What framework or criteria did you use to make that decision?"
      }
    },

