  "follow_up_triggers": {
    "missing_metrics": {
      "description": "Answer lacks numbers or measurable outcomes",
      "detection_hints": ["no numbers", "no percentages", "vague impact", "didn't quantify"]
    },
    "vague_answer": {
      "description": "Answer is too broad or lacks specifics",
      "detection_hints": ["general statements", "no examples", "abstract", "hypothetical"]
    },
    "no_conflict": {
      "description": "Answer doesn't mention challenges or pushback",
      "detection_hints": ["everything went smoothly", "no disagreement", "easy collaboration"]
    },
    "no_strategy": {
      "description": "Missing strategic framing or business context",
      "detection_hints": ["no prioritization logic", "no tradeoffs", "tactical only"]
    },
    "no_user_focus": {
      "description": "Answer doesn't reference user needs or feedback",
      "detection_hints": ["no user mention", "no research", "no validation"]
    },
    "no_technical_depth": {
      "description": "Answer lacks technical specificity",
      "detection_hints": ["high level only", "no architecture", "no implementation details"]
    }
  },

  "leveling_rubrics": {
    "mid": {
      "description": "Mid-level IC (IC2-IC3)",
      "expected_signals": ["functional_competency", "communication_clarity", "collaboration"],
      "minimum_signal_threshold": 0.5,
      "characteristics": [
        "Executes well-defined tasks independently",
        "Communicates clearly within their team",
        "Collaborates effectively with immediate peers"
      ]
    },
    "senior": {
      "description": "Senior IC (IC4-IC5)",
      "expected_signals": ["functional_competency", "strategic_thinking", "problem_solving", "ownership"],
      "minimum_signal_threshold": 0.6,
      "characteristics": [
        "Owns significant scope end-to-end",
        "Makes sound technical/product decisions",
        "Influences beyond immediate team",
        "Mentors junior team members"
      ]
    },
    "director": {
      "description": "Director/Manager (M1-M2)",
      "expected_signals": ["leadership", "stakeholder_management", "strategic_thinking", "executive_presence"],
      "minimum_signal_threshold": 0.65,
      "characteristics": [
        "Leads a team or significant initiative",
        "Manages cross-functional stakeholders",
        "Translates strategy into execution",
        "Develops team members"
      ]
    },
    "executive": {
      "description": "VP/C-level (VP+)",
      "expected_signals": ["executive_presence", "strategic_thinking", "leadership", "stakeholder_management"],
      "minimum_signal_threshold": 0.7,
      "characteristics": [
        "Sets organizational direction",
        "Influences C-suite and board",
        "Builds and scales organizations",
        "Drives company-level outcomes"
      ]
    }
  }
}
